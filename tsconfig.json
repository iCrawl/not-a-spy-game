{
	"compileOnSave": false,
	"compilerOptions": {
		"strict": true,
		"moduleResolution": "node",
		"declaration": false,
		"removeComments": true,
		"alwaysStrict": true,
		"pretty": true,
		"module": "esnext",
		"target": "es2015",
		"lib": ["esnext", "esnext.array", "esnext.bigint", "esnext.intl", "dom"],
		"sourceMap": true,
		"baseUrl": ".",
		"rootDir": ".",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"importHelpers": true,
		"esModuleInterop": true,
		"typeRoots": ["node_modules/@types"],
		"paths": {
			"@codenames/models": ["libs/models/src/index.ts"],
			"@codenames/debounce": ["libs/debounce/src/index.ts"],
			"@codenames/shuffle": ["libs/shuffle/src/index.ts"]
		}
	},
	"exclude": ["node_modules", "tmp"]
}
